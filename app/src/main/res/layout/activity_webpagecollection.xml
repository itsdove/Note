<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mark.WebpageCollectionActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/FAB_ADDCOLLECTION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/add" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RV_COLLECTIONLIST"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/BUTTON_EDITCOLLECTION"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:text="Edit"
        android:textColor="#673AB7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BUTTON_DELETECOLLECTION"
        app:layout_constraintHorizontal_weight="50"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/BUTTON_DELETECOLLECTION"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FDFDFD"
        android:text="Delete"
        android:textColor="#673AB7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BUTTON_CANCELCOLLECTION"
        app:layout_constraintHorizontal_weight="50"
        app:layout_constraintStart_toEndOf="@+id/BUTTON_EDITCOLLECTION" />

    <Button
        android:id="@+id/BUTTON_CANCELCOLLECTION"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FDFDFD"
        android:text="CANCEL"
        android:textColor="#673AB7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="50"
        app:layout_constraintStart_toEndOf="@+id/BUTTON_DELETECOLLECTION" />

</androidx.constraintlayout.widget.ConstraintLayout>